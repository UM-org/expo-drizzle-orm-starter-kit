# Use the specified Ubuntu base image
FROM ubuntu:jammy-20220810

# Set environment variables for non-interactive installation
ENV DEBIAN_FRONTEND=noninteractive

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    unzip \
    gnupg \
    build-essential \
    python3 \
    python3-pip \
    openjdk-17-jdk \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 18.18.0
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs=18.18.0-1nodesource1

# Install Yarn 1.22.19
RUN npm install -g yarn@1.22.19

# Install pnpm 8.9.2
RUN npm install -g pnpm@8.9.2

# Install npm 9.8.1 (updating npm version)
RUN npm install -g npm@9.8.1

# Install Bun 1.0.14
RUN curl -fsSL https://bun.sh/install | bash -s -- bun-v1.0.14 \
    && mv ~/.bun/bin/bun /usr/local/bin/bun

# Install node-gyp 10.0.1
RUN npm install -g node-gyp@10.0.1

# Install NDK 25.1.8937393
RUN wget https://dl.google.com/android/repository/android-ndk-r25b-linux.zip \
    && unzip android-ndk-r25b-linux.zip \
    && mv android-ndk-r25b /opt/android-ndk \
    && rm android-ndk-r25b-linux.zip

# Set environment variables for NDK
ENV ANDROID_NDK_HOME=/opt/android-ndk
ENV PATH=$PATH:$ANDROID_NDK_HOME

# Clean up
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Set the default command to bash
CMD ["bash"]